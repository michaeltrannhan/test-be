generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  shortDesc   String
  stock       Int
  price       Float
  oldPrice    Float
  image       String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Category    Category? @relation(fields: [categoryId], references: [id])
  // categoryId  Int?
}

